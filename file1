echo ' '
echo ' '
echo ' '
read -p ">>>>>>>>>>  " yn

case $yn in
        [yY] ) echo -e "\033[1;31m Starting...\033[0m" ;

sleep 2

clear

sleep 2

bash file5
                break;;
       [nN] ) echo -e "\033[1;31m 2byw5etr7s9a8q6w8t9t0g9e9w8w8w72jrot0goc9cox9jz\033[0m" ;

sleep 1

clear

sleep 2

figlet 'Its'

