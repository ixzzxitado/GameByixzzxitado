sleep 1

clear

figlet 'Scape'

sleep 1

clear

sleep 2

bash file5

                break;;
          [1] )  echo '' ;
                exit;;
        * ) echo -e " \033[1;33m [!]\033[0m \033[5;30m Wrong Option.\033[0m"
esac

