sleep 1

echo -e "\033[1;31m D0NT RUN.\033[0m"

bash oppositor2

                break;;
           [_] ) echo '' ;
                exit;;
        * ) echo -e " \033[1;33m [!]\033[0m \033[5;30m Wrong Option.\033[0m"
