echo ' '
echo ' '
read -p ">>>>>>>>>>  " yn

case $yn in
        [yY] ) echo -e "\033[1;31m HE CAUGHT YOU \033[0m" ;

sleep 2

clear

sleep 2

bash oppositor2

                break;;
       [nN] ) echo -e "\033[1;31m HE CAUGHT YOU \033[0m" ;

sleep 2

