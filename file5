echo ' '
echo ' '
echo ' '
echo ' '
sleep 2
echo ' '
echo -e " \033[1;32m [!]\033[0m \033[1;33m Go to left or right?(l/r)\033[0m"   
echo ' '
echo ' '
echo ' '
sleep 2
echo ' '
echo ' '
echo ' '
echo -e " \033[1;32m [Left]                  [Right]\033[0m"
