echo ' '
echo ' '
echo ' '
read -p ">>>>>>>>>>  " yn

case $yn in
        [lL] ) echo -e "\033[1;31m Going to left...\033[0m" ;

sleep 2

clear

sleep 2

bash file5.sss

                break;;
       [rR] ) echo -e "\033[1;31m Going to right\033[0m" ;

